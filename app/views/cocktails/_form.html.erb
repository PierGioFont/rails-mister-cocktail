<%= simple_form_for [@cocktail] do |f| %>
  <% if @cocktail.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @cocktail.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :name, placeholder: "Mojito" %>
  <%= f.submit "add this cocktail", class: "btn btn-primary" %>
<% end %>
<%= link_to "Back to the list", cocktails_path, class: "btn btn-primary" %>
